#!/bin/bash
if [ $# -eq 0 ]; then
  echo "Usage: $0 <input_file>"
  exit 1
fi
if [ ! -f "$1" ]; then
  echo "Error: File '$1' not found."
  exit 1
fi
line_number=1
while IFS= read -r line; do
  if [ $((line_number % 2)) -eq 1 ]; then
    echo "$line"
  fi
  line_number=$((line_number + 1))
done < "$1"
